pipeline {
agent any
stages {
    
    stage('build') {
  steps {
		sh 'apt-get install -y python3-venv'
		sh 'python3 -m venv venv'
		sh 'source ./venv/bin/activate'
		sh 'pip install -r Requirements.txt'
		sh 'python -m pip install pytest'
		sh 'pip install pytest-html'
  }
}
    stage ('Test'){
        steps {
            sh 'pytest test_DB_Pytest.py'
        }
    }
}
}
